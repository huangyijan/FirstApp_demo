<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--这里设置边框的-px可以实现隐藏边框的效果-->
    <item
        android:left="-1px"
        android:top="-1px"
        android:right="-1px">
        <shape>
            <!--设置内部背景颜色-->
            <!--<solid android:color="#ffffff"/>-->
            <stroke
                android:width="1px"
                android:color="#1affffff"/>
        </shape>
    </item>
</layer-list>